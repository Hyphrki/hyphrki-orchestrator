# =============================================
# Hyphrki Orchestrator - Production Environment
# =============================================

# Database Configuration
POSTGRES_DB=orchestrator_prod
POSTGRES_USER=orchestrator_prod
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgresql://orchestrator_prod:your-secure-postgres-password-here@postgres:5432/orchestrator_prod

# Redis Configuration
REDIS_URL=redis://:your-secure-redis-password-here@redis:6379
REDIS_PASSWORD=your-secure-redis-password-here

# Authentication - Auth0 (Production)
NEXTAUTH_URL=https://app.hyphrki.com
NEXTAUTH_SECRET=your-production-nextauth-secret-key
AUTH0_CLIENT_ID=your-production-auth0-client-id
AUTH0_CLIENT_SECRET=your-production-auth0-client-secret
AUTH0_ISSUER=https://your-production-auth0-domain.auth0.com
AUTH0_AUDIENCE=https://api.hyphrki.com

# API Configuration
NEXT_PUBLIC_API_URL=https://api.hyphrki.com
BACKEND_API_URL=https://api.hyphrki.com
NEXT_PUBLIC_WS_URL=wss://ws.hyphrki.com
CORS_ORIGIN=https://app.hyphrki.com

# Security
JWT_SECRET=your-production-jwt-secret-key-32-chars-minimum
SESSION_SECRET=your-production-session-secret-key-32-chars-minimum

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=warn

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your-production-analytics-id

# Feature Flags
NEXT_PUBLIC_ENABLE_MARKETPLACE=true
NEXT_PUBLIC_ENABLE_BILLING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# CDN (Production)
NEXT_PUBLIC_CDN_URL=https://cdn.hyphrki.com

# Monitoring
GRAFANA_PASSWORD=your-secure-grafana-password

# SSL/TLS (Let's Encrypt)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Email (Production SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@hyphrki.com
SMTP_PASS=your-production-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600
REDIS_CACHE_PREFIX=hyphrki:prod:
